<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <!-- Personnalisation de la barre d'action -->
    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBarTitleText</item>
    </style>

    <!-- Style du texte de la barre d'action -->
    <style name="AppTheme.ActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item> <!-- Blanc -->
    </style>

</resources>